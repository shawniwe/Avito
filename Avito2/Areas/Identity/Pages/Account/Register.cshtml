@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class='registration-container'>
    <h1 class='registration-header'>@ViewData["Title"]</h1>

    <form class='registration-form' asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="All"></div>
        <div class='registration-row'>
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email"/>
            <span asp-validation-for="Input.Email"></span>
        </div>
        <div class='registration-row'>
            <label asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName"/>
            <span asp-validation-for="Input.FirstName"></span>
        </div>
        <div class='registration-row'>
            <label asp-for="Input.LastName"></label>
            <input asp-for="Input.LastName"/>
            <span asp-validation-for="Input.LastName"></span>
        </div>
        <div class='registration-row'>
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" />
            <span asp-validation-for="Input.Password"></span>
        </div>
        <div class='registration-row'>
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword"/>
            <span asp-validation-for="Input.ConfirmPassword"></span>
        </div>
        <div class='registration-row submit-registration-form'>
            <button type="submit">Регистрация</button>
            <a href="/Identity/Account/Login" class='has-account'>Уже есть аккаунт? Авторизуйтесь!</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
